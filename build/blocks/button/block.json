{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "formello/button",
  "title": "Button",
  "description": "A block to display form button.",
  "category": "formello",
  "icon": "button",
  "ancestor": [
    "formello/form"
  ],
  "textdomain": "formello",
  "usesContext": [
    "formello/settings"
  ],
  "attributes": {
    "text": {
      "type": "string",
      "source": "text",
      "selector": "span",
      "default": "Submit"
    },
    "alignment": {
      "type": "string",
      "default": "left"
    },
    "noWrapper": {
      "type": "boolean"
    },
    "type": {
      "type": "string",
      "default": "Loading"
    },
    "style": {
      "type": "object",
      "default": {
        "color": {
          "background": "#000000",
          "text": "#ffffff"
        },
        "padding": {
          "top": "10"
        }
      }
    }
  },
  "selectors": {
    "root": ".wp-block-formello-button",
    "color": ".wp-block-formello-button > button",
    "typography": {
      "root": ".wp-block-formello-button > button",
      "text-decoration": ".wp-block-formello-button > button"
    }
  },
  "supports": {
    "html": false,
    "lock": false,
    "multiple": false,
    "reusable": false,
    "inserter": true,
    "color": {
      "background": true,
      "text": true,
      "gradients": true,
      "__experimentalSkipSerialization": true
    },
    "spacing": {
      "padding": true,
      "margin": true
    },
    "__experimentalBorder": {
      "radius": true,
      "width": true,
      "color": true,
      "style": true
    },
    "typography": {
      "fontSize": true
    }
  },
  "editorScript": "file:./index.js",
  "style": "file:./style-index.css",
  "render": "file:./render.php"
}