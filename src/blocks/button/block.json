{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "formello/button",
	"title": "Button",
	"description": "A block to display form button.",
	"category": "formello",
	"ancestor": ["formello/form"],
	"parent": ["formello/form"],
	"icon": "button",
	"textdomain": "formello",
	"attributes": {
		"text": {
			"type": "string",
			"default": "Submit"
		},
		"iconPosition": {
			"type": "string",
			"default": "ld-ext-right"
		},
		"type": {
			"type": "string",
			"default": "Loading"
		},
		"alignment": {
			"type": "string",
			"default": "left"
		},
		"style": {
			"type": "object",
			"default": {
				"color": {
					"background": "#000000",
					"text": "#ffffff"
				},
				"spacing": {
					"padding": "8px"
				}
			}
		}
	},
	"supports": {
		"html": false,
		"multiple": false,
		"reusable": false,
		"color": {
			"background": true,
			"text": true,
			"gradients": true
		},
		"spacing": {
			"padding": true,
			"__experimentalDefaultControls": {
				"padding": true
			}
		},
		"__experimentalBorder": true,
	    "typography": {
	        "fontSize": true
	    }
	}
}